/* pages/exchange-rate/exchange-rate.wxss */

.header {
  width: 100%;
}

.header .icon {
  width: 56px;
  height: 56px;
  background: url('../../images/tools-icon.png') -144px -144px;
  float: left;
  margin: 10px;
}

.header .text {
  width:70%;
  margin-top: 10px;
  line-height: 24px;
  float: left;
}

.header .text text {
  width: 100%;
  display: block;
}

.wrapper {
  width: 90%;
  padding: 10px;
}

.wrapper .exchangeRate {
  width: 85%;
  float: left;
  height : 60px;
}

.exchangeRate .item {
  width : 100%;
  height: 40px;
}

.exchangeRate .item input {
  width:45%;
  float:left;
  clear:left;
  
}


.exchangeRate .item picker {
  width:45%;
  float:left;
}

.wrapper .direction {
  width: 15%;
  float: left;
  height: 60px;
}

.wrapper .direction .top, .wrapper .direction .bottom {
  width:18px;
  height:15px;
  margin-left:8px;
  border:1px solid #ccc;
  border-width: 1px 1px 0 0;
}

.wrapper .direction .top {
  border-width: 1px 1px 0 0;
}

.wrapper .direction .bottom {
  border-width: 0px 1px 1px 0;
}

.wrapper .direction .btn {
  width:52px;
  height:36px;
  background: url(../../images/toggle.jpg);
}

.wrapper .btn-area {
  width:50%;
  text-align: center;
}